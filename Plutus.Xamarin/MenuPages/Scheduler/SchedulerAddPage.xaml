<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plutus.Xamarin.SchedulerAddPage"          BackgroundColor="#DCD5C9">
    <ContentPage.Content>
        <Grid >
            <Button Margin="0,0,0,0"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="#B8AF9D"
                    Padding="0"
                    FontSize="60"
                    Text="≡"
                    Clicked="MenuButton_Clicked" />

            <Button Margin="0,3,0,0"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    BackgroundColor="Transparent"
                    CornerRadius="15" 
                    TextColor="#A3A09A"
                    FontSize="30"
                    Text="✕" 
                    Clicked="ExitButton_Clicked" />

            <Label Padding="0,60,0,0"
                   Text="SCHEDULER"
                   FontFamily="LilitaOne"
                   FontSize="45"
                   TextColor="#726B60"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand" />

            <Label Text="ADD:"
                   FontFamily="LilitaOne"
                   TextColor="#726B60"
                   FontAttributes="Bold"
                   FontSize="25"
                   Margin="0,230,0,380"
                   HorizontalOptions="Center"/>

            <FlexLayout Margin="90,280,90,250"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Button HeightRequest="70"
                            WidthRequest="100"
                            BackgroundColor="#A3A09A"
                            TextColor="#BE4343"
                            FontFamily="LilitaOne"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Padding="0"
                            Text="-"
                            FontSize="50"
                            CornerRadius="23"
                            Clicked="ScheduledExpense_Clicked"/>
                    <Label Text="expense"
                           FontAttributes="Bold"
                           TextColor="#726B60"
                           FontFamily="LilitaOne"
                           HorizontalOptions="Center"/>
                </StackLayout>
                <Label WidthRequest="50"></Label>
                <StackLayout>
                    <Button HeightRequest="70"
                            WidthRequest="100"
                            BackgroundColor="#A3A09A"
                            TextColor="#87C127"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            FontFamily="LilitaOne"
                            FontSize="50"
                            Padding="0"
                            CornerRadius="23"
                            Text="+"
                            Clicked="ScheduledIncome_Clicked"/>

                    <Label TextColor="#726B60"
                           FontFamily="LilitaOne"
                           FontAttributes="Bold"
                           Text="income"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </FlexLayout>
            <Button Margin="20"
                    WidthRequest="120"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    BackgroundColor="#A3A09A"
                    CornerRadius="15" 
                    TextColor="White"
                    FontSize="Body"
                    FontFamily="LilitaOne"
                    Text="scheduled" 
                    Clicked="MyScheduledPayments_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
