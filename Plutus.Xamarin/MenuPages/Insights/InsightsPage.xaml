<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plutus.Xamarin.InsightsPage"
              BackgroundColor = "#DCD5C9">
    <ContentPage.Content>
        <Grid>
            


            <StackLayout Padding="0,60,0,0" BackgroundColor="#DCD5C9">
                <Label 
                   Text="INSIGHTS" FontSize="48"
                   TextColor="#726B60"
                   FontAttributes="Bold"
                   FontFamily="LilitaOne"
                   HorizontalOptions="CenterAndExpand" />
                
                <Frame HasShadow="False" BackgroundColor="#CD5C9" Margin="20,3,20,10" BorderColor="Transparent" >
                    <ScrollView>
                        <StackLayout x:Name="statisticsStack">
                        </StackLayout>
                    </ScrollView>
                </Frame>
            </StackLayout>
            <Button Margin="0,0,0,0"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="#B8AF9D"
                    Padding="0"
                    FontSize="60"
                    Text="≡"
                    Clicked="MenuButton_Clicked" />

            <Button Margin="0,3,0,0"
                    WidthRequest="60"
                    HeightRequest="60"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    BackgroundColor="Transparent"
                    CornerRadius="15" 
                    TextColor="#A3A09A"
                    FontSize="30"
                    Text="✕" 
                    Clicked="ExitButton_Clicked" />
        </Grid>

    </ContentPage.Content>
</ContentPage>