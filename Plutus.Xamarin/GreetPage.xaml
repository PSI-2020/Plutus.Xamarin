<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plutus.Xamarin.GreetPage"
             BackgroundColor="#DCD5C9">
    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5, 0.30, 0.8, 0.6" Source = "PlutusLogo.png">
        </Image>
        <Button BackgroundColor="#A3A09A" FontFamily="LilitaOne" TextColor="White" FontSize="25" AbsoluteLayout.LayoutBounds="0.5, 0.75, 0.8, 0.1" AbsoluteLayout.LayoutFlags="All" CornerRadius="15" Text="GET STARTER" Clicked="GetStarted_Clicked">
        </Button>
    </AbsoluteLayout>
</ContentPage>